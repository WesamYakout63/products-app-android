<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/date_picker_component_width"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ok_cancel_btns_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/dialog_button_selector"
            android:text="@string/cancel_dialog_string"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/vertical_line_separator"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="0.005"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/done"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/dialog_button_selector"
            android:text="@string/ok_dialog_string"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>